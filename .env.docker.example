# Docker deployment environment variables example
# Copy this file to .env and update with your values

# -----------------------------------------------------------------------------
# Web Information
# -----------------------------------------------------------------------------
NEXT_PUBLIC_WEB_URL=http://localhost:3000
NEXT_PUBLIC_PROJECT_NAME=AudioTextHub

# -----------------------------------------------------------------------------
# Speech Recognition API
# -----------------------------------------------------------------------------
# Update this to your actual API URL
NEXT_PUBLIC_API_URL=http://154.201.76.130:3099

# -----------------------------------------------------------------------------
# Database with Supabase (optional)
# -----------------------------------------------------------------------------
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# -----------------------------------------------------------------------------
# Auth with next-auth
# Secret can be generated with `openssl rand -base64 32`
# -----------------------------------------------------------------------------
AUTH_SECRET=your_auth_secret_here

# Google Auth (optional)
AUTH_GOOGLE_ID=
AUTH_GOOGLE_SECRET=
NEXT_PUBLIC_AUTH_GOOGLE_ID=
NEXT_PUBLIC_AUTH_GOOGLE_ENABLED=false

# Github Auth (optional)
AUTH_GITHUB_ID=
AUTH_GITHUB_SECRET=
NEXT_PUBLIC_AUTH_GITHUB_ENABLED=false

# -----------------------------------------------------------------------------
# Analytics (optional)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=
NEXT_PUBLIC_OPENPANEL_CLIENT_ID=
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=
NEXT_PUBLIC_PLAUSIBLE_SCRIPT_URL=

# -----------------------------------------------------------------------------
# Other settings
# -----------------------------------------------------------------------------
NEXT_PUBLIC_LOCALE_DETECTION=false
NEXT_PUBLIC_DEFAULT_THEME=light
NEXT_PUBLIC_GOOGLE_ADCODE=